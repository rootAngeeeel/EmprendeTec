<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".reg_Redes">


    <ImageView
        android:id="@+id/imv_reg_redes_title"
        android:layout_width="248dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="69dp"
        app:layout_constraintBottom_toTopOf="@+id/imv_reg_redes_facebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/social_title" />


    <EditText
        android:id="@+id/edt_reg_redes_twitter"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/editText_Emprendetec"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edt_reg_redes_linkedin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imv_reg_redes_twitter"
        app:layout_constraintTop_toBottomOf="@+id/edt_reg_redes_facebook" />

    <ImageView
        android:id="@+id/imv_reg_redes_facebook"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/imv_reg_redes_twitter"
        app:layout_constraintEnd_toStartOf="@+id/edt_reg_redes_facebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_reg_redes_title"
        app:srcCompat="@drawable/Facebook" />

    <EditText
        android:id="@+id/edt_reg_redes_facebook"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/editText_Emprendetec"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edt_reg_redes_twitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imv_reg_redes_facebook"
        app:layout_constraintTop_toBottomOf="@+id/imv_reg_redes_subtitle2" />

    <ImageView
        android:id="@+id/imv_reg_redes_twitter"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="458dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edt_reg_redes_twitter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_reg_redes_facebook"
        app:srcCompat="@drawable/twitter" />

    <ImageView
        android:id="@+id/imv_reg_redes_linkedin"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edt_reg_redes_linkedin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.443"
        app:srcCompat="@drawable/linkedin" />

    <EditText
        android:id="@+id/edt_reg_redes_linkedin"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/editText_Emprendetec"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/imv_reg_redes_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imv_reg_redes_linkedin"
        app:layout_constraintTop_toBottomOf="@+id/edt_reg_redes_twitter" />

    <ImageView
        android:id="@+id/imv_reg_redes_subtitle"
        android:layout_width="367dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_reg_redes_linkedin"
        app:srcCompat="@drawable/social_subtitle2" />

    <ImageView
        android:id="@+id/btn_reg_redes_sig"
        android:layout_width="164dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:srcCompat="@drawable/btn_siguiente" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_reg_redes_sig"
        app:layout_constraintEnd_toEndOf="@+id/imv_reg_redes_subtitle"
        app:layout_constraintStart_toStartOf="@+id/imv_reg_redes_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/imv_reg_redes_subtitle">

        <RadioButton
            android:id="@+id/rbtn_reg_redes_desarrollaProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Desarrollar un proyecto"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtn_reg_redes_newSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aprender nuevas Skills"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtn_reg_redes_participarProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participar en un proyecto"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imv_reg_redes_subtitle2"
        android:layout_width="176dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_reg_redes_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_reg_redes_title"
        app:srcCompat="@drawable/rede_sociales" />

</androidx.constraintlayout.widget.ConstraintLayout>